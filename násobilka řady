<body>
  <div class="container">
    <h1>Procviƒçuj n√°sobky</h1>
    <div id="controls">
      <label for="number">Vyber n√°sobilku:</label>
      <select id="number">
        <option value="2">2</option><option value="3">3</option><option value="4">4</option>
        <option value="5">5</option><option value="6">6</option><option value="7">7</option>
        <option value="8">8</option><option value="9">9</option><option value="10">10</option>
      </select>
      <button id="resetBtn">Nov√° hra</button>
    </div>

    <div class="grid" id="grid" aria-label="Tabulka ƒç√≠sel"></div>
    <div class="slots" id="slots"></div>
    <div id="feedback" role="status" aria-live="polite"></div>
  </div>

<script>
window.addEventListener('DOMContentLoaded', () => {
  const grid = document.getElementById('grid');
  const select = document.getElementById('number');
  const feedback = document.getElementById('feedback');
  const slots = document.getElementById('slots');
  const resetBtn = document.getElementById('resetBtn');

  let correctCount = 0;
  let multiples = [];

  function shuffleArray(array) {
    for (let i = array.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [array[i], array[j]] = [array[j], array[i]];
    }
    return array;
  }

  function createGrid() {
    grid.innerHTML = '';
    slots.innerHTML = '';
    feedback.textContent = '';
    feedback.classList.remove('error');
    correctCount = 0;

    const multiple = parseInt(select.value, 10);
    multiples = Array.from({length:10}, (_, i) => multiple * (i + 1));

    // sloty
    for (let i = 0; i < 10; i++) {
      const slot = document.createElement('div');
      slot.className = 'slot';
      slot.setAttribute('data-index', i);
      slots.appendChild(slot);
    }

    // ƒç√≠sla po ≈ô√°dc√≠ch (1‚Äì100), uvnit≈ô des√≠tky prom√≠chan√°
    const fragment = document.createDocumentFragment();
    for (let start = 1; start <= 100; start += 10) {
      const row = [];
      for (let i = start; i < start + 10; i++) row.push(i);
      shuffleArray(row);
      row.forEach(number => {
        const cell = document.createElement('div');
        cell.className = 'cell';
        cell.textContent = number;
        cell.addEventListener('click', () => checkNumber(cell, number));
        fragment.appendChild(cell);
      });
    }
    grid.appendChild(fragment);
  }

  function checkNumber(cell, number) {
    const index = multiples.indexOf(number);
    if (index !== -1) {
      const slot = slots.querySelector(`.slot[data-index="${index}"]`);
      if (slot && slot.textContent === '') {
        cell.classList.add('correct');
        slot.textContent = number;
        correctCount++;
      }
      if (correctCount === 10) {
        feedback.textContent = 'V≈°e spr√°vnƒõ üôÇ';
      }
    } else {
      cell.classList.add('wrong');
      feedback.textContent = 'To nen√≠ spr√°vnƒõ ‚Äî zkus to znovu.';
      feedback.classList.add('error');
      setTimeout(() => cell.classList.remove('wrong'), 600);
    }
    cell.style.pointerEvents = 'none';
  }

  resetBtn.addEventListener('click', createGrid);
  select.addEventListener('change', createGrid);

  createGrid();
});
</script>
</body>
</html>
