  * { box-sizing: border-box; }
  html,body { height:100%; margin:0; }
  body {
    background: url("n√°sobilka 2 pozad√≠.png") no-repeat center center fixed;
    background-size: cover;
    font-family: Arial, sans-serif;
    text-align: center;
    padding: 12px;
  }
  .container { max-width: 750px; margin: 0 auto; }
  h1 { margin: 6px 0 12px; }
  #controls { margin-bottom: 12px; }
  .grid {
    display: grid;
    grid-template-columns: repeat(10, 45px);
    grid-gap: 5px;
    justify-content: center;
    margin: 0 auto;
    width: max-content;
  }
  .cell {
    width: 45px; height: 45px; line-height: 45px;
    background: white; border: 1px solid #ccc;
    cursor: pointer; font-weight: bold; border-radius: 6px;
    user-select: none; transition: transform .12s;
    font-size: 15px;
  }
  .cell:hover { transform: translateY(-2px); }
  .correct { background: lightgreen !important; border-color: #6fbf6f; pointer-events: none; }
  .wrong { background: lightcoral !important; animation: shake .32s; }
  @keyframes shake {
    0% { transform: translateX(0); } 25% { transform: translateX(-4px); }
    50% { transform: translateX(4px); } 75% { transform: translateX(-3px); }
    100% { transform: translateX(0); }
